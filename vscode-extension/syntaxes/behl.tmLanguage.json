{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "behl",
  "scopeName": "source.behl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#builtins" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.behl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.behl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.behl",
          "match": "\\b(if|else|elseif|while|for|foreach|return|break|continue|defer)\\b"
        },
        {
          "name": "storage.type.behl",
          "match": "\\b(let|const)\\b"
        },
        {
          "name": "keyword.other.behl",
          "match": "\\b(function|typeof|in|import|export|module|local)\\b"
        },
        {
          "name": "constant.language.behl",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.behl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.behl",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        },
        {
          "name": "string.quoted.single.behl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.behl",
              "match": "\\\\(['\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.behl",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.behl",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.behl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.behl",
          "match": "(\\*\\*|\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.bitwise.behl",
          "match": "(\\^|\\||&|~|<<|>>)"
        },
        {
          "name": "keyword.operator.comparison.behl",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.behl",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.behl",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.behl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.behl",
          "match": "\\b(print|println|tostring|tonumber|type|assert|error|pcall|require|import)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.behl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
